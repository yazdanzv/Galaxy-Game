<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.8
        Rectangle:
            size: self.size
    Label:
        font_size: "60dp"
        font_name: "fonts/Sackers-Gothic-Std-Light.ttf"
        text: root.parent.label_text
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
    Button:
        font_size: "25dp"
        font_name: "fonts/Eurostile.ttf"
        text: root.parent.button_text
        pos_hint: {"center_x": 0.5, "center_y": 0.3}
        size_hint: .2, .1
        background_normal: ''
        background_color: 1, 0.3, 0.4, 0.85
        on_press: root.parent.on_button_clicked()